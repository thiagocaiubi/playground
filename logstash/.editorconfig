root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.go]
indent_style = tab

[*.{json,tf,toml,yaml,yml}]
indent_size = 2

[{Vagrantfile,logstash.config}]
indent_size = 2

[*.sh]
indent_style = tab
